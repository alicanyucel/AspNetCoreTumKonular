@model WebApplication1.EmployeeListViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RazorDemo</title>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>İd</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>City İd</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Employess)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.FirstName
                    </td>
                    <td>
                        @item.LastName
                    </td>
                    <td>
                        @item.CityId
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>Suanki tarih:@DateTime.Now</p>
    @{

        var number = 10;
    }
    <p>@number</p>
    @if (number < 10)
    {
        <p>sayi 10 dan kucuk</p>
    }
    else if (number > 10)
    {
        <p>sayi 10 dan buyuk</p>
    }
    else
    {
        <p>sayi 10</p>
    }
    <p>for dongusu</p>
    @for (int i = 0; i < Model.Employess.Count; i++)
    {
        @Model.Employess[i].FirstName <br />
    }
    <p>while dongusu</p>
    @{
        var counter = 0;
    }
    @while (counter < Model.Employess.Count)
    {
        <p>@Model.Employess[counter].LastName</p>
        counter++;
    }
    <p>Do While</p>
    @{
        int sayac = 1;
    }
    @do
    {
        <p>@sayac</p>

        sayac++;

    } while (sayac <= 5);
    @try
    {
        int a = 5;
        int b = 0;
        int c;
        c = a / b;//0 a bölünme hatası dividedbyzero verecek
    }
    catch (Exception ex)
    {

<p>@ex.Message.ToString();</p> 
    }
    finally
    {
    <p>Her zaman calisir</p>
    }
    @using (Html.BeginForm())
    {
        <input type="text" id="ad" name="ad"/>
        <button type="submit"> </button>
    }
    
</body>
</html>
